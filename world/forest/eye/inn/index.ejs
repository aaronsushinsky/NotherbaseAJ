<p>
    You are standing before the inn.
</p>

<div class="stall">
    <h3>Looking for Tundra Explorers!</h3>
    
    <div class="stream"></div>
    <div class="chat-box" id="eotf-expidition-recruiting"></div>

    <p>
        Register here to be part of the next
        expedition into the snowy tundra!
    </p>
    <ul></ul>
    <button>Register for this Expedition</button>
</div>

<h4>Community Notices</h4>
<div class="billboard" id="inn-ads"></div>



<hr>

<a class="to" href="/forest/eye/inn/lobby">
    Enter the Inn
</a>

<hr>

<a class="to" href="/forest/eye/school">
    Head to the School
</a>

<a class="to" href="/forest/eye/square">
    Head to the Square
</a>

<a class="to" href="/forest/eye/filter/tower">
    Head into the Filter
</a>

<script src="/js/billboard.js"></script>
<script src="/js/chat-box.js"></script>
<script>
    let innBB = null;

    base.load("eotf-inn-ads", "global").then((res) => {
        console.log(<%= user.authLevels.includes("eotf-inn-ads") %>);
        innBB = new Billboard("inn-ads", res.items, {
            onSave: "save-ads",
            free: <%= user.authLevels.includes("eotf-inn-ads") %>
        });
    });

    const chat = new ChatBox("<%= user.username %>", "eotf-expidition-recruiting");
</script>